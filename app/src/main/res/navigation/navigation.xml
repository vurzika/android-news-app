<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/newsListFragment">

    <fragment
        android:id="@+id/newsListFragment"
        android:name="com.onramp.vurzika.newsapp.NewsListFragment"
        android:label="@string/app_name">
        <action
            android:id="@+id/action_newsListFragment_to_detailsFragment"
            app:destination="@id/newsDetailsFragment" />
        <action
            android:id="@+id/action_newsListFragment_to_settingsActivity"
            app:destination="@id/settingsActivity" />
    </fragment>
    <fragment
        android:id="@+id/newsDetailsFragment"
        android:name="com.onramp.vurzika.newsapp.NewsDetailsFragment"
        android:label="Details Fragment">
        <argument
            android:name="newsArticleId"
            app:argType="string" />
    </fragment>
    <activity
        android:id="@+id/settingsActivity"
        android:name="com.onramp.vurzika.newsapp.SettingsActivity"
        android:label="SettingsActivity" />
</navigation>